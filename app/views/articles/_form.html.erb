<%= form_for(@article) do |f| %> <!-- f is the form and asks to add the following elements to it: -->
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><<%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
